{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./dist", "../node_modules"]
}
