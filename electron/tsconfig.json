{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../src/**/*.ts"],
  "exclude": ["../node_modules", "../dist"]
}
